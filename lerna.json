{
  "packages": [
    "packages/*",
    "desktop/*",
    "web/*",
    "chrome-extension/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com/"
    },
    "version": {
      "allowBranch": "master",
      "ignoreChanges": [
        "**/*.md"
      ]
    }
  }
}